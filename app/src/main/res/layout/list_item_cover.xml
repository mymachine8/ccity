<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/orderdetailscardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/darker_gray"
    android:layout_marginBottom="10dp"
    android:clipChildren="false"
    android:clipToPadding="false"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:foregroundGravity="center"
    android:layout_centerHorizontal="true"

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical">

        <TextView
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:id="@+id/nameedittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swapna Kundala"
            android:textSize="23sp"
            android:textColor="@android:color/holo_purple"
            />

        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/itemedittext1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LG 42 ABV SWIVEL WALL - 1"
                    />

                <TextView
                    android:id="@+id/itemedittext2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LG 42 FSD 2D SMART LED - 1"
                    />
            </LinearLayout>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/orderstatusimage"
                android:background="@drawable/circular_button_truck"
                android:src="@drawable/truck"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <RelativeLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/Line1addressedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ashoknagar S.O"
                    />

                <TextView
                    android:id="@+id/Line2addressedittext"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Secunderabad,500020"
                    />
            </LinearLayout>
            <ImageButton
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/CallActionFloatingActionButton"
                android:background="@drawable/circular_button_call"
                android:src="@drawable/phone"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_marginTop="10dp"
            android:paddingBottom="2dp"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:background="@android:color/holo_red_light">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/map_icon_30_46"
                    />
                <TextView
                    android:id="@+id/distancetextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="--"
                    android:letterSpacing="0.1"
                    android:textSize="30sp"
                    android:textColor="@android:color/white"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="KMs"
                    android:textSize="13sp"
                    android:textColor="@android:color/white"
                    />
            </LinearLayout>

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:gravity="end"
                android:paddingRight="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_schedule"
                    />
                <TextView
                    android:id="@+id/timetextview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:text="--:--"
                    android:textSize="30sp"
                    android:letterSpacing="0.1"
                    android:textColor="@android:color/white"
                    />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
