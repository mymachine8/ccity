<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/loginscreenbackground"
    tools:context=".fragments.LoginFragment"
    tools:showIn="@layout/activity_authentication">

    <RelativeLayout
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/companylogo"
            android:layout_width="@dimen/logo_size"
            android:layout_height="@dimen/logo_size"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo"
            />
        <ImageView
            android:id="@+id/companyname"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/activity_login_companyname_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/brand"
            android:layout_below="@id/companylogo"
            />

        <EditText
            android:id="@+id/usernametext"
            android:layout_width="@dimen/login_input_box"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_adduser"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_login_marginTop"
            android:hint="User Name"
            android:textColorHint="@android:color/white"
            android:background="@drawable/background_inputbox"
            >
        </EditText>

        <EditText
            android:id="@+id/passwordtext"
            android:layout_width="@dimen/login_input_box"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_password"
            android:textColor="@android:color/white"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/usernametext"
            android:hint="Password"
            android:password="true"
            android:textColorHint="@android:color/white"
            android:background="@drawable/background_inputbox"
            android:layout_marginTop="20dp"
            >
        </EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_alignEnd="@id/passwordtext"
            android:layout_alignRight="@id/passwordtext"
            android:layout_below="@id/passwordtext"
            android:textColor="@android:color/white"
            android:text="Forgot Password"
            android:layout_margin="5dp"
            />

        <Button
            android:id="@+id/loginbutton"
            android:layout_below="@id/passwordtext"
            android:layout_centerHorizontal="true"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="LOGIN"
            android:theme="@style/Button.Branded"
            android:layout_marginTop="35dp"
            />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="web"
        android:text="@string/companyurl"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
